# Environment
ENV=production
DEBUG=false

# Backend
SECRET_KEY=please-change-me-to-a-secure-random-value
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ALLOWED_HOSTS=*
# CORS_ORIGINS: comma-separated list (used by backend CORS config)
CORS_ORIGINS=http://localhost,http://127.0.0.1

# Postgres (used by the Postgres container)
POSTGRES_USER=portfolio_user
POSTGRES_PASSWORD=change_this_db_password
POSTGRES_DB=portfolio_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database URL used by the backend (adjust scheme if using async driver)
DATABASE_URL=postgresql://portfolio_user:change_this_db_password@db:5432/portfolio_db

# Frontend (Vite expects env vars prefixed with VITE_)
# In production, browser requests will typically go to the same domain; set to backend service if needed
VITE_API_URL=http://backend:8000
